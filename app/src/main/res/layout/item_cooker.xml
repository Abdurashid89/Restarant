<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ttnumber"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/table_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Table Number"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/table_number"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ttnumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ttnumber"
        android:text="0"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:id="@+id/rv"
        tools:listitem="@layout/item_cooker_order"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/ttnumber"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>